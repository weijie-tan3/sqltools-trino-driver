{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "server": {
      "title": "Server",
      "type": "string"
    },
    "catalog": {
      "title": "Catalog",
      "type": "string"
    },
    "schema": {
      "title": "Schema",
      "type": "string"
    },
    "user": {
      "title": "User",
      "type": "string"
    },
    "password": {
      "title": "Password",
      "type": "string",
      "minLength": 1
    },
    "externalAuthentication": {
      "title": "External Authentication",
      "type": "boolean",
      "default": false,
      "description": "Enable external OAuth2 authentication. When enabled, username and password are not required."
    },
    "trinoOptions": {
      "type": "object",
      "title": "Trino Options",
      "properties": {
        "ssl": {
          "type": "object",
          "title": "SSL",
          "properties": {
            "rejectUnauthorized": {
              "title": "Reject Unauthorized",
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "externalAuthentication": {
            "const": true
          }
        }
      },
      "then": {
        "required": ["server", "catalog"]
      },
      "else": {
        "required": ["server", "catalog", "user"]
      }
    }
  ]
}
